{{#partial "content"}}

    <div class="jumbotron text-center">

        <h1>Wildlife Tracker</h1>

        <h3>About</h3>
        <p> Wildlife Tracker is an application for keeping track of wildlife in the pack.</p>



    </div>
    <div class="col-md-6 text-center">
        <h2>Post Sighting </h2>
        <form action="/post_sighting" method="post" class="p-2" id="regHero">
            <label for="animalName">Animal Sighted</label>
            <input type="text" class="form-control" name="name" placeholder=" Name of Animal sighted" required>

            <label for="age">Animal's Age</label>
            <select class="form-control" id="inlineFormCustomSelect" name="age" required>
                <option >Choose... Animal's Age</option>
                <option  value="new-born">New Born</option>
                <option value="young">Young</option>
                <option value="adult">Adult</option>
            </select>

            <label for="health">Animal's Health</label>
            <select class="form-control" id="inlineFormCustomSelect" name="healthy" required>
                <option >Choose... Animal's Health</option>
                <option  value="true">Okay</option>
                <option value="false">Ill</option>

            </select>

            <label for="endangered">Is animal Endangered ?</label>
            <select class="form-control" id="inlineFormCustomSelect" name="endangered" required>
                <option disabled>Choose... Animal's Endangered Category</option>
                <option  value="true">Not under Endangered Category</option>
                <option value="false">Animal under Endangered Category</option>

            </select>

            <label for="location">Sighting location</label>
            <select class="form-control" id="inlineFormCustomSelect" name="location" required>
                <option >Choose... Sighting location</option>
                <option value="zone_A">Zone A</option>
                <option value="zone_B">Zone B</option>
                <option value="zone_C">Zone C</option>
                <option value="zone_D">Zone D</option>
                <option value="zone_E">Zone E</option>


            </select>

            <label for="ranger">Ranger Name</label>
            <select class="form-control" id="inlineFormCustomSelect" name="ranger" required>
                <option >Choose... Your Name</option>
                <option  value="kamala">Kamala</option>
                <option  value="bacteria">Bacteria</option>
                <option  value="Wamlambez">Wamlambez</option>
                <option  value="shadi">Shadi</option>

            </select>



            <button type="submit" class="btn btn-primary">Register</button>

        </form>
    </div>
    <div class="col-md-6 text-center">

        <h3 class="">List of Sightings</h3>
        {{#if allSighting}}
            <h4>{{location}}</h4>
            <h4>{{ranger}}</h4>

        {{/if}}

        {{#if allAnimals}}

        <ol>
            {{#each allAnimals}}
                <h3>{{id}}. Animal : {{name}}  </h3>
                <h4>Age {{age}}: </h4>
                <h4>Endangered ? : {{endangered}}</h4>
                <h4>Healthy ? :  {{healthy}}</h4>
            </ol>
            <ul>

            {{/each}}
        </ul>


        {{else}}
            <div class="jumbotron m-4" >
                <h4>OOOPS!!!No Animal Sighting recorded yet </h4>
                <!--                <a href="#regHero">Register Hero</a>-->
            </div>
        {{/if}}





    </div>



{{/partial}}



{{> layout.hbs}}
